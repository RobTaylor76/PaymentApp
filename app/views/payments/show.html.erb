<div class="container">


  <div class="row">
    <div class="col-md-8">
    <%= link_to 'Back', payments_path, class: "btn btn-default" %>
    </div>
  </div>

  <div class="panel">
  <%= form_for(@payment) do |f| %>
      <h1>Payment Details</h1>

      <% f.with_options(:disabled => true) do |form| %>
          <div class="form-group">

              <%= form.label :type %>
              <%= form.text_field :type, :disabled => true %>

          </div>
          <div class="form-group">


              <%= form.label :date %>
              <%= form.date_field :date %>

          </div>

          <div class="form-group">

              <%= form.label :email %>
              <%= form.email_field :email %>

          </div>
          <div class="form-group">

              <%= form.label :description %>
              <%= form.text_field :description %>

          </div>

          <div class="form-group">

              <%= form.label :status %>
              <%= form.text_field :status %>

          </div>

          <div class="form-group">

              <%= form.label :amount %>
              <%= form.number_field :amount %>


          </div>

          <% if @payment.paid? %>
              <div class="form-group">

                  <%= form.label :amount_fees %>
                  <%= form.number_field :amount_fees %>

              </div>
          <% end %>

          <% unless @payment.draft? %>
          <div class="form-group">

              <%= form.label :status_message %>
              <%= form.text_field :status_message %>

          </div>
          <% end %>
      <% end %>
  <% end %>
  </div>
  <% if @payment.draft? %>

      <form action="<%= payment_stripe_callback_url(@payment, guid: @payment.guid) %>" method="POST">
        <script
        src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="<%= current_account.stripe_pk %>"
        data-currency="GBP"
        data-amount="<%= @payment.amount_in_pence %>"
        data-name="<%= current_account.name %>"
        data-label="Pay with Stripe"
        data-description="<%= @payment.description %>"
        data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
        data-locale="auto"
        data-email="<%= @payment.email %>"
        data-allow-remember-me="false"
        data-zip-code="false">
        </script>
      </form>

  <% end %>

</div>